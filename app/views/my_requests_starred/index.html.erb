<div class="container">

  <div>
    <% heart_filled_src = "icons/icon-donna2.png" %>
    <%= image_tag(heart_filled_src, class: "donna_icon", size:"40x40", alt:"donna icon", style:"margin-top:10px;margin-bottom:-10px;") %>
    <h5 style="display: inline;">My Requests > Starred Requests</h5>
  </div>

  <div class="divider"></div>
  <br />

  <div class="row">
    <div class="col s12 m3">
      <!-- Inner Menu Selection -->
      <%= render :partial=>'partials/my_requests_selection', :locals=> {active_row:3} %>
      <!--end of selection list area-->

      <!-- Google adaptable side ad -->
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- MyRequestSideAd -->
      <ins class="adsbygoogle"
           style="display:block"
           data-ad-client="ca-pub-4877409910199261"
           data-ad-slot="6609012057"
           data-ad-format="auto"></ins>
      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>

    </div>

    <div class="col s12 m9">

      <!-- Main Contents -->
      <% @requests.length.times do |i| %>
        <% req = @requests[i] %>
        <% favCount = @favCountArray[i] %>
        <% askUserName = @askUserNames[i] %>
        <% isFav = @isFavArray[i] %>
        <% isStar = @isStarArray[i] %>
        <% commentCount = @commentCountArray[i] %>

        <% if !req.id.nil? %>
          <%= render :partial => 'partials/request_preview_card', :locals=> {req: req, favCount:favCount, askUserName:askUserName, isFav:isFav, isStar:isStar, disableLink: false, commentCount:commentCount, isRequestDetailsPage: false} %>
        <% end %>

      <% end %>
    </div>
  </div>

</div>

<script type="text/javascript">
mixpanel.track("my_requests_starred_viewed", {
    "user_id": 000,
});
</script>
