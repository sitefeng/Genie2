<div class="container">

  <div class="row header">
    <h4>Request Submitted</h4>
    <div class="divider"></div>
    <br />
  </div>

  <%= link_to(request_details_path(@questionId)) do %>
    <div class="card teal darken-3">
      <div class="card-content white-text">
        <b>You asked on </b>
        <b><%= @questionAskTime.strftime("%B %d, %Y") %></b>
        <div style="font-family: 'Courgette', sans-serif">
          <span class="card-title"><%= @questionTitle %></span>
          <div class="divider"></div>
          <p><%= @questionDetails %></p>
        </div>
      </div>
    </div>
  <% end %>

  <div class="center">
    <p class="center-align">You can view all of your requests by going back to My Requests</p>
    <div class="btn-large waves-effect waves-light orange">
      <%= button_to "My Requests", my_requests_index_path, :method => :get %>
    </div>
  </div>

</div>

<script type="text/javascript">
  mixpanel.track("onSubmitQuestion_viewed", {
      "user_id": 000,
  });
</script>
