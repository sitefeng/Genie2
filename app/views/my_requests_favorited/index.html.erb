<div class="container">

  <h5>My Requests > Favorited Requests</h5>
  <div class="divider"></div>
  <br />

  <!-- Inner Menu Selection -->
  <%= render :partial=>'partials/my_requests_selection', :locals=> {active_row:2} %>
  <!--end of selection list area-->


  <!-- Main Contents -->
  <% @favoritedRequests.length.times do |i| %>
    <% req = @favoritedRequests[i] %>
    <% askUserName = @askUserNames[i] %>

    <%= link_to(request_details_path(req.id)) do %>

      <div class="row">

        <div class="col s2">
          <div style="padding: 5px 5px 5px 5px;">
            <div style="border: 1px solid black; background-color: #FFB0BA;">
              2039
            </div>
            <img class="favorite" req-id="#{req.id}" src="images/icons/heart_icon.png" alt="heart icon" height="22" width="22" filled="false"/>

            <img class="star" src="images/icons/star_icon.png" alt="star icon" height="22" width="22"/>

          </div>

        </div>

        <div class="col s10">

          <div class="card teal lighten-5">
            <div class="card-content black-text">
              <b><%= "#{askUserName} asked on " %></b>
              <b><%= req.askTime.strftime("%B %d, %Y") %></b>
              <span class="card-title">
                <%=req.title%>
              </span>
              <div class="divider"></div>
              <p><%= req.details %></p>
            </div>
          </div>

        </div> <!-- end of col s10 -->

      </div>

    <% end %>

  <% end %>


</div>


<script type="text/javascript">
mixpanel.track("my_requests_favorited_viewed", {
    "user_id": 000,
});
</script>
