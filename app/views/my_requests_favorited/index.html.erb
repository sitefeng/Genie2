<div class="container">

  <h5>My Requests > Favorited Requests</h5>
  <div class="divider"></div>
  <br />

  <div class="row">
    <div class="col s12 m3">
      <!-- Inner Menu Selection -->
      <%= render :partial=>'partials/my_requests_selection', :locals=> {active_row:2} %>
      <!--end of selection list area-->

      <!-- Google adaptable side ad -->
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- MyRequestSideAd -->
      <ins class="adsbygoogle"
           style="display:block"
           data-ad-client="ca-pub-4877409910199261"
           data-ad-slot="6609012057"
           data-ad-format="auto"></ins>
      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>

    <div class="col s12 m9">

      <!-- Main Contents -->
      <% @favoritedRequests.length.times do |i| %>
        <% req = @favoritedRequests[i] %>
        <% favCount = @favCountArray[i] %>
        <% askUserName = @askUserNames[i] %>
        <% isFav = @isFavArray[i] %>
        <% isStar = @isStarArray[i] %>
        <% commentCount = @commentCountArray[i] %>

        <% if !req.id.nil? %>
          <%= render :partial => 'partials/request_preview_card', :locals=> {req: req, favCount:favCount, askUserName:askUserName, isFav:isFav, isStar:isStar, disableLink: false, commentCount:commentCount, isRequestDetailsPage: false} %>
        <% end %>

      <% end %>
    </div>
  </div>

</div>


<script type="text/javascript">
mixpanel.track("my_requests_favorited_viewed", {
    "user_id": 000,
});
</script>
