<!DOCTYPE html>
<html>
  <head>
    <title>Genie2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar">
      <div id="navbar" class="navbar-collapse collapse">
        <%= link_to "The Donna", landing_index_path %>
        <%= link_to "Activity", activity_index_path %>
        <%= link_to "My Requests", my_requests_index_path %>
        <%= link_to "My Answers", my_answers_index_path %>
        <!-- <%= link_to "Settings", settings_index_path %> -->
        <%= link_to "#{@loginLabelText}", @loginLabelPath %>
        <%= link_to "Request Advice", request_advice_index_path %>
      </div>
    </nav>

    <hr />

    <div>
      <% flash.each do |key, value| %>
        <p><%= value %></p>
      <% end %>
    </div>

    <%= yield %>
  </body>
</html>
