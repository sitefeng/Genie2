<div class="container">

  <h5>My Requests > My Questions</h5>
  <div class="divider"></div>
  <br />

  <div class="row">
    <div class="col s12 m3">
      <!-- Inner Menu Selection -->
      <%= render :partial=>'partials/my_requests_selection', :locals=> {active_row:0} %>
      <!--end of selection list area-->

      <!-- Google adaptable side ad -->
      <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
      <!-- MyRequestSideAd -->
      <ins class="adsbygoogle"
           style="display:block"
           data-ad-client="ca-pub-4877409910199261"
           data-ad-slot="6609012057"
           data-ad-format="auto"></ins>
      <script>
      (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>

    <div class="col s12 m9">
      <% if @requests.length == 0 %>
        <div class="center">
          <br />
          <h3 class="center-align grey-text"><i class="large material-icons">inbox</i></h3>
          <h5 class="center-align grey-text">You haven't requested any advices yet. Try making your first personal request.</h5>
          <br />
          <div class="btn-large waves-effect waves-light orange">
            <%= button_to "Request Advice", request_advice_index_path, :method => :get %>
          </div>

          <br />
          <br />
        </div>
      <% end %>

      <% @requests.length.times do |i| %>
        <% req = @requests[i] %>
        <% favCount = @favCountArray[i] %>
        <% askUserName = @askUserNames[i] %>
        <% isFav = @isFavArray[i] %>
        <% isStar = @isStarArray[i] %>
        <% commentCount = @commentCountArray[i] %>

        <% if !req.id.nil? %>
          <%= render :partial => 'partials/request_preview_card', :locals=> {req: req, favCount:favCount, askUserName:askUserName, isFav:isFav, isStar:isStar, disableLink: false, commentCount:commentCount} %>
        <% end %>

      <% end %>
    </div>
  </div>

</div>

<script type="text/javascript">
mixpanel.track("my_requests_questions_viewed", {
    "user_id": 000,
});
</script>
